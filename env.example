# Prompt-Scribe API 環境變數配置範本
# 複製此文件為 .env 並填入實際值

# =============================================================================
# Supabase Configuration (必需)
# =============================================================================

# Supabase 專案 URL
# 獲取方式: Supabase Dashboard → Settings → API → Project URL
SUPABASE_URL=https://fumuvmbhmmzkenizksyq.supabase.co

# Supabase Anon Key (公開安全的 key，用於客戶端)
# 獲取方式: Supabase Dashboard → Settings → API → Project API keys → anon public
SUPABASE_ANON_KEY=your-anon-key-here

# Supabase Service Role Key (僅用於伺服器端，勿暴露)
# 獲取方式: Supabase Dashboard → Settings → API → Project API keys → service_role secret
# 注意: 此 key 有完整權限，請妥善保管
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# Application Settings (應用設定)
# =============================================================================

# 應用名稱
APP_NAME=Prompt-Scribe API

# 應用版本
APP_VERSION=2.0.0

# 調試模式 (生產環境應設為 false)
DEBUG=false

# 日誌等級 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# Cache Configuration (快取配置)
# =============================================================================

# 快取策略 (memory, redis, hybrid)
CACHE_STRATEGY=memory

# 快取過期時間（秒）
CACHE_TTL=3600

# 記憶體快取最大容量
CACHE_MAX_SIZE=1000

# =============================================================================
# Redis Configuration (可選 - 當使用 redis 或 hybrid 快取時)
# =============================================================================

REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# CORS Settings (跨域設定)
# =============================================================================

# 允許的來源（生產環境應限制為特定域名）
CORS_ORIGINS=*

# =============================================================================
# Performance Settings (效能設定)
# =============================================================================

MAX_WORKERS=4
TIMEOUT=30
MAX_BATCH_SIZE=100

# =============================================================================
# OpenAI Configuration (OpenAI 配置)
# =============================================================================

# OpenAI API Key (用於 GPT-5 Nano 集成)
# 獲取方式: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# OpenAI 模型設定
OPENAI_MODEL=gpt-5-nano
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=30

# =============================================================================
# Feature Flags (功能開關)
# =============================================================================

ENABLE_USAGE_LOGGING=true
ENABLE_CACHE_WARMUP=true
ENABLE_VERBOSE_LOGGING=false
ENABLE_OPENAI_INTEGRATION=true

# =============================================================================
# 使用說明
# =============================================================================
# 
# 1. 複製此文件: cp env.example .env
# 2. 編輯 .env 填入實際值
# 3. 絕對不要提交 .env 到 Git
# 4. 從 Supabase Dashboard 獲取 API keys
# 

